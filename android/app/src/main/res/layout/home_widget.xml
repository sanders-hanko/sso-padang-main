<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Informasi absensi hari ini"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/widget_text_tanggal"
            android:layout_width="wrap_content"
            android:text="1 Januari 1970"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Grid 2x2 -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:orientation="horizontal"
        android:useDefaultMargins="true">

        <!-- Masuk -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:padding="8dp">
            <!--            android:background="@drawable/widget_card_bg"-->

<!--            <ImageView-->
<!--                android:layout_width="24dp"-->
<!--                android:layout_height="24dp"-->
<!--                android:src="@drawable/ic_sunrise" />-->

            <TextView
                android:id="@+id/widget_text_masuk"
                android:layout_width="wrap_content"
                android:text="09:50"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Masuk"
                android:textSize="12sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Pulang -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:padding="8dp">
<!--            android:background="@drawable/widget_card_bg"-->

<!--            <ImageView-->
<!--                android:layout_width="24dp"-->
<!--                android:layout_height="24dp"-->
<!--                android:src="@drawable/ic_sunset" />-->

            <TextView
                android:id="@+id/widget_text_pulang"
                android:layout_width="wrap_content"
                android:text="19:13"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Pulang"
                android:textSize="12sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Diluar Kantor -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:padding="8dp">
<!--            android:background="@drawable/widget_card_bg"-->

<!--            <ImageView-->
<!--                android:layout_width="24dp"-->
<!--                android:layout_height="24dp"-->
<!--                android:src="@drawable/ic_location" />-->

            <TextView
                android:layout_width="wrap_content"
                android:text="Diluar"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Kantor"
                android:textSize="12sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Absensi Berhasil -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:padding="8dp">
<!--            android:background="@drawable/widget_card_bg"-->

<!--            <ImageView-->
<!--                android:layout_width="24dp"-->
<!--                android:layout_height="24dp"-->
<!--                android:src="@drawable/ic_info" />-->

            <TextView
                android:layout_width="wrap_content"
                android:text="Absensi"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Berhasil"
                android:textSize="12sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </GridLayout>

</LinearLayout>
